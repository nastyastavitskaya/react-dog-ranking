{
  "compilerOptions":
    {
      "allowSyntheticDefaultImports": true,
      "target": "es5",
      "module": "es6",
      "moduleResolution": "node",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "jsx": "react",
      "strict": false,
      "noImplicitReturns": true,
      "rootDir": "src",
      "outDir": "dist",
      "allowJs": true,
    },
  "exclude": ["node_modules"]
}
